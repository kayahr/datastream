{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/datastream",
    "version": "1.2.0",
    "description": "Data stream classes for writing and reading all kinds of data types, even single bits",
    "keywords": [
        "typescript",
        "data",
        "stream",
        "input",
        "output"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/datastream",
    "homepage": "https://github.com/kayahr/datastream",
    "bugs": "https://github.com/kayahr/datastream/issues",
    "funding": "https://github.com/kayahr/datastream?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": {
        ".": "./lib/main/index.js",
        "./node": "./lib/main/node/index.js"
    },
    "types": "lib/main/index.d.ts",
    "typesVersions": {
        "*": {
            "node": [
                "lib/main/node/index.d.ts"
            ]
        }
    },
    "scripts": {
        "clean": "rimraf lib coverage doc/api",
        "compile": "tsc",
        "check": "better-jest",
        "doc": "typedoc",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell --no-progress",
        "prepare": "npm run clean && npm run compile",
        "test": "npm run check && npm run lint && npm run doc -- --emit none && npm run cspell"
    },
    "jest": {
        "projects": [
            {
                "displayName": "node",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            },
            {
                "displayName": "electron",
                "runner": "@kayahr/jest-electron-runner",
                "testEnvironment": "@kayahr/jest-electron-runner/environment",
                "testMatch": [
                    "<rootDir>/lib/test/**/*.test.js"
                ]
            }
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/lib/main/**/*.js"
        ]
    },
    "devDependencies": {
        "@kayahr/better-jest": "1.1.2",
        "@kayahr/eslint-config": "2.8.0",
        "@kayahr/jest-electron-runner": "29.7.0",
        "@types/jest": "29.5.3",
        "@typescript-eslint/eslint-plugin": "6.2.1",
        "@typescript-eslint/parser": "6.2.1",
        "cspell": "6.31.2",
        "eslint": "8.46.0",
        "eslint-plugin-deprecation": "1.5.0",
        "eslint-plugin-simple-import-sort": "10.0.0",
        "jest": "29.6.2",
        "rimraf": "5.0.1",
        "source-map-support": "0.5.21",
        "tmp-promise": "3.0.3",
        "typedoc": "0.24.8",
        "typescript": "5.1.6"
    },
    "dependencies": {
        "@kayahr/text-encoding": "^1.2.0",
        "tslib": "^2.6.1",
        "web-streams-polyfill": "^3.2.1"
    }
}
