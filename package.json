{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/datastream",
    "version": "2.1.0",
    "type": "module",
    "description": "Data stream classes for writing and reading all kinds of data types, even single bits",
    "keywords": [
        "typescript",
        "data",
        "datastream",
        "stream",
        "input",
        "output"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/datastream",
    "homepage": "https://github.com/kayahr/datastream",
    "bugs": "https://github.com/kayahr/datastream/issues",
    "funding": "https://github.com/kayahr/datastream?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": {
        ".": "./lib/main/core.js",
        "./node": "./lib/node/node.js"
    },
    "scripts": {
        "clean": "rm -rf lib",
        "build": "run build:*",
        "build:compile": "tsc",
        "test": "run test:*",
        "test:unit": "ntest",
        "test:lint": "oxlint --type-aware --deny-warnings",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "prepare": "run clean build"
    },
    "devDependencies": {
        "@kayahr/assert": "1.2.0",
        "@kayahr/cspell": "9.2.1-bundle.2",
        "@kayahr/npm-utils": "1.0.0",
        "@kayahr/ntest": "1.1.0",
        "@kayahr/oxlint-config": "1.5.0",
        "@kayahr/typedoc": "0.28.14-bundle.1",
        "@types/node": "24.7.2",
        "base64-js": "1.5.1",
        "tmp-promise": "3.0.3",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "@kayahr/text-encoding": "^2.0.1"
    }
}
