{
    "$schema": "https://typedoc.org/schema.json",
    "entryPoints": [
        "src/main/index.ts",
        "src/node/index.ts"
    ],
    "basePath": "src",
    "entryPointStrategy": "resolve",
    "out": "doc/api",
    "excludePrivate": true,
    "excludeExternals": true,
    "treatWarningsAsErrors": true,
    "gitRevision": "main"
}
